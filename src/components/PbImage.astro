---
import { getImageUrl } from "../js/backend.mjs";
import { Image } from "astro:assets";

const { record, recordImage, width = 800, height = 600 } = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{
    imageURL && (
        <Image
            src={imageURL}
            alt={record.nomMaison || "Image"}
            width={width}
            height={height}
            inferSize={true}
        />
    )
}
